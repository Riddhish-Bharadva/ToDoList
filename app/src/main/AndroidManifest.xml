<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rab.todolist">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.rab.todolist.EditListTitle" />
        <activity android:name="com.rab.todolist.TaskEditPage" />
        <activity android:name="com.rab.todolist.CreateNewTask" />
        <activity android:name="com.rab.todolist.TaskHomePage" />
        <activity android:name="com.rab.todolist.CreateNewToDoList" />
        <activity android:name="com.rab.todolist.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>